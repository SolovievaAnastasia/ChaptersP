#include <iostream>
using namespace std;
 
    struct candyBar
    {
        string name;
        double ves;
        int kcal;
    };
 
int main()
{
   
    candyBar *candyPtr = new candyBar[3]; // выделяем место дл
 
    cout << "Введите название 1-й коробки конфет: ";
    getline (cin, candyPtr[0].name);
    cout << "Введите вес 1-й коробки конфет: ";
    cin >> candyPtr[0].ves;
    cout << "Введите количество калорий в 1-й коробке конфет: ";
    cin >> candyPtr[0].kcal;
    cout << endl;
    cin.ignore();
 
    cout << "Введите название 2-й коробки конфет: ";
    getline (cin, candyPtr[1].name);
    cout << "Введите вес 2-й коробки конфет: ";
    cin >> candyPtr[1].ves;
    cout << "Введите количество калорий в 2-й коробке конфет: ";
    cin >> candyPtr[1].kcal;
    cout << endl;
    cin.ignore();
 
    cout << "Введите название 3-й коробки конфет: ";
    getline (cin, candyPtr[2].name);
    cout << "Введите вес 3-й коробки конфет: ";
    cin >> candyPtr[2].ves;
    cout << "Введите количество калорий в 3-й коробке конфет: ";
    cin >> candyPtr[2].kcal;
    cout << endl;
    cin.ignore();
 
    cout << "Название 1-й коробки конфет: " << candyPtr[0].name << endl;
    cout << "Вес 1-й коробки конфет: " << candyPtr[0].ves<< endl;
    cout << "Количество калорий в 1-й коробке конфет: " << candyPtr[0].kcal << endl;
 
    cout << "Название 2-й коробки конфет: " << candyPtr[1].name << endl;
    cout << "Вес 2-й коробки конфет: " << candyPtr[1].ves << endl;
    cout << "Количество калорий в 2-й коробке конфет: " << candyPtr[1].kcal<< endl;
 
    cout << "Название 3-й коробки конфет: " << candyPtr[2].name<< endl;
    cout << "Вес 3-й коробки конфет: " << candyPtr[2].ves<< endl;
    cout << "Количество калорий в 3-й коробке конфет: " << candyPtr[2].kcal<< endl;
 
    delete [] candyPtr;
    return 0;
}

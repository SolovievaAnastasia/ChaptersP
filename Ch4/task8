#include <iostream>
using namespace std;
struct Pizza
{
    double diameter, ves;
    string name;
    double weight;
};
int main()
{
   
    Pizza *forExample = new Pizza;
    cout << "Введите диаметр пиццы: ";
    cin >> forExample->diameter; 
    cin.get();
 
    cout << "Введите название производителя: ";
    getline (cin, forExample->name);
    cout << "Введите вес пиццы: ";
    cin >> forExample->weight;
    cout << endl;
   
    cout << "Название компании: " << forExample->name << endl;
    cout << "Диаметр пиццы: " << forExample->diameter << endl;
    cout << "Вес пиццы: " << forExample->weight << endl;
  
    delete forExample;
    return 0;
}
